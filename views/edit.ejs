<% include partials/header %>

<body>
  <div class="container">
    <div class="bs-calltoaction bs-calltoaction-primary" style="padding-bottom:90px;">
      <div class="col-md-5 col-md-offset-4 cta-contents">
        <h1 style="font-family: 'Raleway', sans-serif;">Oda Eknomike e Kosoves</h1><br>
      </div>

      <div class="row">
        <div class="col-md-4 ">
          <br />
          <div class="cta-desc">
            <form method="POST" action="/oek/update/<%= doc._id %>">
              <label for="company_name">Company name</label>
	             <input type="text" value="<%= doc.company_name %>" class="form-control" name="company_name" placeholder="">
               <br />
              <label for="municipality">Municipality</label>
              <input type="text" value="<%= doc.municipality %>" class="form-control" name="municipality" placeholder="">
              <br />
              <label for="password">Password</label>
              <input type="password" value="<%= doc.password %>" class="form-control" name="password" placeholder="">
              <br />
              <label for="business_registration_nr">Business registration nr.</label>
              <input type="tel" value="<%= doc.business_registration_nr %>" class="form-control" id="telephone" name="business_registration_nr" >
          </div>
        </div>

        <div class="col-md-4 ">
            <br />
            <div class="cta-desc">
              <label for="company_address">Company address</label>
              <input type="text" value="<%= doc.company_address %>" class="form-control" name="company_address" placeholder="">
              <br />
              <label for="email_address">Email address</label>
              <input type="email" value="<%= doc.email_address %>" class="form-control" name="email_address" placeholder="">
              <br />
              <label for="website">Website</label>
              <input type="text" value="<%= doc.website %>" class="form-control" name="website" placeholder="">
              <br />
              <label for="business_description">Business description</label>
              <input type="text" value="<%= doc.business_description %>" class="form-control" name="business_description" placeholder="">
            </div>
        </div>
      </div>
      <br>

      <div class="col-md-4 col-md-offset-4">
        <div class="cta-button">
          <input type="submit" class="btn btn-lg btn-block btn-primary "style="border-radius:0px; padding-top:8px; padding-bottom:8px;	font-family: 'Raleway', sans-serif;"></input>
        </div>
      </div>
     </form>
    </div>

  <% include partials/footer %>
