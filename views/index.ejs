<% include partials/header %>

<body>
  <div class="container" style="width: 1730px;">
    <div class="bs-calltoaction bs-calltoaction-primary" style="padding-bottom:90px;">
      <div class="col-md-5 col-md-offset-4 cta-contents">
        <h1 style="font-family: 'Raleway', sans-serif;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Oda Eknomike e Kosoves</h1><br>
      </div>

      <div class="row">
        <div class="col-md-4 ">
          <br />
          <div class="cta-desc">
            <form method="POST" action="/oek/add">
              <label for="company_name">Company name</label>
	             <input type="text" class="form-control" name="company_name" placeholder="">
               <br />
              <label for="municipality">Municipality</label>
              <input type="text" class="form-control" name="municipality" placeholder="">
              <br />
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" placeholder="">
              <br />
              <label for="business_registration_nr">Business registration nr.</label>
              <input type="tel" class="form-control" id="telephone" name="business_registration_nr" >
          </div>
        </div>

        <div class="col-md-4 ">
            <br />
            <div class="cta-desc">
              <label for="company_address">Company address</label>
              <input type="text" class="form-control" name="company_address" placeholder="">
              <br />
              <label for="email_address">Email address</label>
              <input type="email" class="form-control" name="email_address" placeholder="">
              <br />
              <label for="website">Website</label>
              <input type="text" class="form-control" name="website" placeholder="">
              <br />
              <label for="business_description">Business description</label>
              <input type="text" class="form-control" name="business_description" placeholder="">
            </div>
        </div>
      </div>
      <br>
      <div class="col-md-4 col-md-offset-4">
        <div class="cta-button">
          <input type="submit" class="btn btn-lg btn-block btn-primary "style="border-radius:0px; padding-top:8px; padding-bottom:8px;	font-family: 'Raleway', sans-serif;"></input>
        </div>
      </div>
     </form>
    </div>

  <div class="bs-calltoaction bs-calltoaction-primary">
    <br />
    <div class="row">
      <table class="table table-striped">
          <thead>
            <tr>
              <th>Company name</th>
              <th>Municipality</th>
              <th>Password</th>
              <th>Business registration nr.</th>
              <th>Company address</th>
              <th>Email address</th>
              <th>Website</th>
              <th>Business description</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% docs.map(function(doc) { %>
              <tr>
                <td><%= doc.company_name %></td>
                <td><%= doc.municipality %></td>
                <td><%= doc.password %></td>
                <td><%= doc.business_registration_nr %></td>
                <td><%= doc.company_address %></td>
                <td><%= doc.email_address %></td>
                <td><%= doc.website %></td>
                <td><%= doc.business_description %></td>
                <td><a href="/oek/edit/<%=doc._id%>">Edit</a></td>
                <td><a href="/oek/delete/<%=doc._id%>">Delete</a></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
    </div>
  </div>

<% include partials/footer %>
